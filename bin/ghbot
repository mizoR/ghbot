#!/usr/bin/env ruby

require 'uri'
require 'dotenv'
require 'ghbot'

Dotenv.load

login    = ENV['GITHUB_LOGIN']
password = ENV['GITHUB_PASSWORD']
ssl      = ENV['SSL'] == 'on'
uri      = URI.parse(ENV['IRC_URL'])
channel  = uri.path

if channel =~ %r<^/>
  channel[0] = '#'
end

bot = Cinch::Bot.new do
  configure do |c|
    c.nick      = 'ghbot'
    c.server    = uri.host
    c.port      = uri.port
    c.user      = uri.user      if uri.user.to_s != ''
    c.password  = uri.password  if uri.password.to_s != ''
    c.channels  = [channel]
    c.ssl.use   = ssl
    c.plugins.plugins = [
      Ghbot::Notifier.plugin(
        :channel  => channel,
        :login    => login,
        :password => password
      )
    ]
  end
end

bot.start

